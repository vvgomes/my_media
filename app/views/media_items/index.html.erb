<p id="notice"><%= notice %></p>

<h1 class="col-md-8">
  <span>Recent Media Items</span>
  <%= link_to 'New Media item', new_media_item_path, :class => 'btn btn-info pull-right' %>
</h1>
<hr />

<% @media_items.each do |media_item| %>
  <article class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <h2 class="lead"><%= media_item.description %></h2>
        <a target="blank" href="<%= media_item.url %>">
          <span class="glyphicon glyphicon-globe"></span>
          <span><%= media_item.url %></span>
        </a>
      </div>
      <div class="panel-footer">
        <span class="glyphicon glyphicon-tag"></span>
        <span><%= t(media_item.kind) %></span>
        <span class="pull-right">
          <%= link_to media_item, method: :delete, :class => 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash">
          <% end %>
        </span>
      </div>
    </div>
  </article>
<% end %>

